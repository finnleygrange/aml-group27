@model MediaService.Models.Book

<h1>@Model.Title</h1>

<div>
    <strong>Author:</strong> @Model.Author
</div>
<div>
    <strong>ISBN:</strong> @Model.ISBN
</div>
<div>
    <strong>Page Count:</strong> @Model.PageCount
</div>
<div>
    <strong>Description:</strong>
    <p>@Model.Description</p>
</div>

<div class="mt-3">
    <a href="@Url.Action("EditBook", "Books", new { id = Model.Id })" class="btn btn-warning">Edit</a>
    <a href="@Url.Action("DeleteBook", "Books", new { id = Model.Id })" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this book?')">Delete</a>
</div>

<a href="@Url.Action("GetAllBooks", "Books")" class="btn btn-primary mt-3">Back to List</a>
