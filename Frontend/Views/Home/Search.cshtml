@{
    ViewData["Title"] = "Search";
}

 <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/js/site.js" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Frontend.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">


<div class= "advancedSearch">
<h1> Advanced Search</h1>

<form class="row g-3 needs-validation" novalidate>
  <div class="col-md-4 position-relative">
    <label for="validationTooltip01" class="form-label">Title</label>
    <input type="text" class="form-control" id="validationTooltip01" value="Titanic" required>
    <div class="valid-tooltip">
      Looks good!
    </div>
  </div>
  <div class="col-md-4 position-relative">
    <label for="validationTooltip02" class="form-label">Author</label>
    <input type="text" class="form-control" id="validationTooltip02" value="M.Otto" required>
    <div class="valid-tooltip">
      Looks good!
    </div>
  </div>
  <div class="col-md-3 position-relative">
    <label for="validationTooltip03" class="form-label">Subject</label>
    <input type="text" class="form-control" id="validationTooltip03" required>
    <div class="invalid-tooltip">
      Please provide a valid subject.
    </div>
  </div>
   <div class="col-md-4 position-relative">
    <label for="validationTooltip04" class="form-label">ISBN</label>
    <input type="text" class="form-control" id="validationTooltip04" required>
    <div class="invalid-tooltip">
      Please provide a valid ISBN.
    </div>
  </div>
  <div class="col-md-3 position-relative">
    <label for="validationTooltip05" class="form-label">Year</label>
    <select class="form-select" id="validationTooltip05" required>
      <option selected disabled value="">2024-2020</option>
      <option>2019-2015</option>
      <option>2014-2010</option>
    </select>
    <div class="invalid-tooltip">
      Please select a valid year.
    </div>
  </div>
  <div class="col-12">
   <button class="btn btn-outline-success" type="submit" >Search</button>
  </div>
</form>
</div>