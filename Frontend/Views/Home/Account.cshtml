@{
    ViewData["Title"] = "Account";
}

@using TransactionService.Models
@model List<Transaction>

 <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/js/site.js" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Frontend.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">


<h1>Personal Account </h1>

    <main class="account-container">
        <div class="profile-info">
            <h2>Welcome, Marry Kate</h2>
            <div class="profile-picture">
                <img src="/img/img7.jpg" alt="Profile Picture" />
            </div>
            <p><strong>Email:</strong> m.kate@example.com</p>
             <p><strong>Joined:</strong> November 2024</p>
            <p><strong>Membership:</strong> Active</p>
        </div>

        <div class="borrowed-books">
            <h3>Transactions</h3>

        @if (Model != null && Model.Any())
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Transaction ID</th>
                        <th>Media Item ID</th>
                        <th>Borrow Date</th>
                        <th>Due Date</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var transaction in Model)
                    {
                        <tr>
                            <td>@transaction.Id</td>
                            <td>@transaction.MediaItemId</td>
                            <td>@transaction.BorrowDate.ToString("MM/dd/yyyy")</td>
                            <td>@transaction.DueDate.ToString("MM/dd/yyyy")</td>
                            <td>@transaction.Status</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No transactions found.</p>
        }
        </div>

        <div class="reserved-media">
            <h3>WishList</h3>
            <ul>
                <li>The Catcher in the Rye - <span>Reserved</span></li>
                <li>Brave New World - <span>Reserved</span></li>
            </ul>
        </div>

        <div class="reading-history">
            <h3>Reading History</h3>
            <ul>
                <li>To Kill a Mockingbird - Completed</li>
                <li>Pride and Prejudice - Completed</li>
            </ul>
        </div>

        <div class="settings">
            <h3>Account Settings</h3>
            <button>Edit Profile</button>
            <button>Change Password</button>
            <button>Manage Subscription</button>
        </div>

    </main>

    