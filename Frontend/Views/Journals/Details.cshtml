@model MediaService.Models.Journal

<!-- Main Journals Details Section -->
    <main class="book-details-container">
        <div class="book-info">
            <h1>@Model.Title</h1>
            <p><strong>Publisher</strong> @Model.Publisher</p>
            <p><strong>Issue Number:</strong> @Model.IssueNumber</p>
            
            <div class="availability">
                <p><strong>Status:</strong> Available</p>
                <!-- Change text based on availability -->
            </div>

            <div class="book-description">
                <h3><strong>Description:</strong></h3>
                 <p>@Model.Description</p>
            </div>

<div class="mt-3">
   <a href="@Url.Action("EditJournal", "Journals", new { id = Model.Id })" class="btn btn-outline-success">Add to WishList</a>
   <a href="@Url.Action("EditJournal", "Journals", new { id = Model.Id })" class="btn btn-outline-success">Borrow</a>
  <a href="@Url.Action("EditJournal", "Journals", new { id = Model.Id })" class="btn btn-outline-success">Read</a>

    </main>

<a href="@Url.Action("GetAllJournals", "Journals")" class="btn btn-success btn-lg">Back to List</a>
