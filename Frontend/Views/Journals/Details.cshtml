@model MediaService.Models.Journal

<h1>@Model.Title</h1>

<div>
    <strong>Publisher</strong> @Model.Publisher
</div>
<div>
    <strong>Issue Number:</strong> @Model.IssueNumber
</div>
<div>
    <strong>Description:</strong>
    <p>@Model.Description</p>
</div>

<div class="mt-3">
    <a href="@Url.Action("EditJournal", "Journals", new { id = Model.Id })" class="btn btn-warning">Edit</a>
    <a href="@Url.Action("DeleteJournal", "Journals", new { id = Model.Id })" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this journal?')">Delete</a>
</div>

<a href="@Url.Action("GetAllJournals", "Journals")" class="btn btn-primary mt-3">Back to List</a>
