@model MediaService.Models.Game

<h1>@Model.Title</h1>

<div>
    <strong>Platform:</strong> @Model.Platform
</div>
<div>
    <strong>Developer</strong> @Model.Developer
</div>
<div>
    <strong>Genre:</strong> @Model.Genre
</div>
<div>
    <strong>Description:</strong>
    <p>@Model.Description</p>
</div>

<div class="mt-3">
    <a href="@Url.Action("EditGame", "Games", new { id = Model.Id })" class="btn btn-warning">Edit</a>
    <a href="@Url.Action("DeleteGame", "Games", new { id = Model.Id })" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this game?')">Delete</a>
</div>

<a href="@Url.Action("GetAllGames", "Games")" class="btn btn-primary mt-3">Back to List</a>
