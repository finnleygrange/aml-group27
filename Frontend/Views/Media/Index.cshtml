@model List<MediaService.Models.MediaItem>

@{
    ViewData["Title"] = "Media List";
}


<div class="d-flex justify-content-center flex-column">
    <h1 class="my-4 text-center">@ViewData["Title"]</h1>

    <div class="mb-3">
        <form method="get" action="@Url.Action("Index", "Media")">
            <div class="input-group">
                <input type="text" name="searchQuery" class="form-control" placeholder="Search media..."
                       value="@ViewData["SearchQuery"]" />
                <button type="submit" class="btn btn-outline-primary">Search</button>
            </div>
        </form>
    </div>

    @if (Model.Count == 0)
    {
        <div class="alert alert-warning" role="alert">
            No media available.
        </div>
    }

    <h2 class="my-4 text-center">Books</h2>
    <div class="row">
        @foreach (var mediaItem in Model.Where(m => m.MediaType.Name == "Book"))
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm border-light rounded">
                    <div class="card-body">
                        <h5 class="card-title">@mediaItem.Title</h5>
                        <h6 class="card-subtitle mb-2 text-muted">ID: @mediaItem.Id</h6>
                        <p class="card-text text-truncate" style="font-size: 1rem; color: #555;">@mediaItem.Description</p>
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("GetBook", "Books", new { id = mediaItem.Id })" class="btn btn-primary btn-sm">View Details</a>
                            <a href="@Url.Action("EditBook", "Books", new { id = mediaItem.Id })" class="btn btn-warning btn-sm">Edit</a>
                            <a href="@Url.Action("DeleteBook", "Books", new { id = mediaItem.Id })" class="btn btn-danger btn-sm">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <h2 class="my-4 text-center">DVDs</h2>
    <div class="row">
        @foreach (var mediaItem in Model.Where(m => m.MediaType.Name == "DVD"))
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm border-light rounded">
                    <div class="card-body">
                        <h5 class="card-title">@mediaItem.Title</h5>
                        <h6 class="card-subtitle mb-2 text-muted">ID: @mediaItem.Id</h6>
                        <p class="card-text text-truncate" style="font-size: 1rem; color: #555;">@mediaItem.Description</p>
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("GetDvd", "Dvds", new { id = mediaItem.Id })" class="btn btn-primary btn-sm">View Details</a>
                            <a href="@Url.Action("EditDvd", "Dvds", new { id = mediaItem.Id })" class="btn btn-warning btn-sm">Edit</a>
                            <a href="@Url.Action("DeleteDvd", "Dvds", new { id = mediaItem.Id })" class="btn btn-danger btn-sm">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <h2 class="my-4 text-center">Games</h2>
    <div class="row">
        @foreach (var mediaItem in Model.Where(m => m.MediaType.Name == "Game"))
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm border-light rounded">
                    <div class="card-body">
                        <h5 class="card-title">@mediaItem.Title</h5>
                        <h6 class="card-subtitle mb-2 text-muted">ID: @mediaItem.Id</h6>
                        <p class="card-text text-truncate" style="font-size: 1rem; color: #555;">@mediaItem.Description</p>
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("GetGame", "Games", new { id = mediaItem.Id })" class="btn btn-primary btn-sm">View Details</a>
                            <a href="@Url.Action("EditGame", "Games", new { id = mediaItem.Id })" class="btn btn-warning btn-sm">Edit</a>
                            <a href="@Url.Action("DeleteGame", "Games", new { id = mediaItem.Id })" class="btn btn-danger btn-sm">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <h2 class="my-4 text-center">Journals</h2>
    <div class="row">
        @foreach (var mediaItem in Model.Where(m => m.MediaType.Name == "Journal"))
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm border-light rounded">
                    <div class="card-body">
                        <h5 class="card-title">@mediaItem.Title</h5>
                        <h6 class="card-subtitle mb-2 text-muted">ID: @mediaItem.Id</h6>
                        <p class="card-text text-truncate" style="font-size: 1rem; color: #555;">@mediaItem.Description</p>
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("GetJournal", "Journals", new { id = mediaItem.Id })" class="btn btn-primary btn-sm">View Details</a>
                            <a href="@Url.Action("EditJournal", "Journals", new { id = mediaItem.Id })" class="btn btn-warning btn-sm">Edit</a>
                            <a href="@Url.Action("DeleteJournal", "Journals", new { id = mediaItem.Id })" class="btn btn-danger btn-sm">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="text-center mt-4">
        <a href="@Url.Action("Create", "Media")" class="btn btn-success btn-lg">Create New Media</a>
    </div>
</div>


