@model List<MediaService.Models.MediaItem>

@{
    ViewData["Title"] = "Media List";
}

<h1 class="my-4">@ViewData["Title"]</h1>

<div class="mb-3">
    <form method="get" action="@Url.Action("Index", "Media")">
        <div class="input-group">
            <input type="text" name="searchQuery" class="form-control" placeholder="Search media items..."
                   value="@ViewData["SearchQuery"]" />
            <button type="submit" class="btn btn-outline-primary">Search</button>
        </div>
    </form>
</div>

@if (Model.Count == 0)
{
    <div class="alert alert-warning" role="alert">
        No media items available.
    </div>
}
else
{
    <div class="row">
        @foreach (var mediaItem in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@mediaItem.Title</h5>
                        <h6 class="card-subtitle mb-2 text-muted">ID: @mediaItem.Id</h6>

                        <p class="card-text">@mediaItem.Description</p>

                        <a href="@Url.Action("Details", new { id = mediaItem.Id })" class="btn btn-primary">View Details</a>
                        <a href="@Url.Action("Edit", new { id = mediaItem.Id })" class="btn btn-warning">Edit</a>
                        <a href="@Url.Action("Delete", new { id = mediaItem.Id })" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
}

<a href="@Url.Action("Create")" class="btn btn-success mt-3">Create New Media</a>
