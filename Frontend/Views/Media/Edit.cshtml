@model MediaService.Models.MediaItem

@{
    ViewData["Title"] = "Edit Media Item";
}

<h1>@ViewData["Title"]</h1>

<form method="post" asp-action="Edit" asp-route-id="@Model.Id">
    <div class="form-group">
        <label for="Title">Title</label>
        <input type="text" class="form-control" id="Title" name="Title" value="@Model.Title" required />
    </div>
    <div class="form-group">
        <label for="Description">Description</label>
        <textarea class="form-control" id="Description" name="Description" required>@Model.Description</textarea>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
    <a href="@Url.Action("Details", new { id = Model.Id })" class="btn btn-secondary mt-3">Cancel</a>
</form>
