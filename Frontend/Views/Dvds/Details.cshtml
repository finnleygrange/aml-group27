@model MediaService.Models.DVD

<h1>@Model.Title</h1>

<div>
    <strong>Duration:</strong> @Model.DurationMinutes
</div>
<div>
    <strong>Description:</strong>
    <p>@Model.Description</p>
</div>

<div class="mt-3">
    <a href="@Url.Action("EditDvd", "Dvds", new { id = Model.Id })" class="btn btn-warning">Edit</a>
    <a href="@Url.Action("DeleteDvd", "Dvds", new { id = Model.Id })" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this DVD?')">Delete</a>
</div>

<a href="@Url.Action("GetAllDvds", "Dvds")" class="btn btn-primary mt-3">Back to List</a>
